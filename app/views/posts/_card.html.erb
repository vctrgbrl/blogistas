<div class="card mb-3" style="max-width: 660px;">
  <%= link_to post, style: "text-decoration: none; color: inherit;" do %>
  <div class="row g-0">
    <div class="col-sm-4">
      <%= image_tag(post.thumbnail, class: "card-img img-fluid rounded-start", style: "width: 100%; height: 100%; object-fit: cover;") %>
    </div>
    <div class="col-sm-8">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text">
          <%= post.snippet[0..100] if !!post.snippet %>
          <%= "..." if !!post.snippet and post.snippet.length > 100 %>
        </p>
        <p class="card-text">
          <small class="text-body-secondary">
            Última atualização
            <%= time_ago_in_words post.updated_at %>
          </small>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
